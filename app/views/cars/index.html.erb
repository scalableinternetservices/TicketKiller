<% cache(cache_key_for_car_table) do %>
<p id="notice"><%= notice %></p>

<h1>Cars</h1>
<table class="table table-striped">

  <thead>
    <tr>
      <th>Car Name</th>
      <th>Long</th>
      <th>Lat</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cars.each do |car| %>
      <% cache(cache_key_for_car_row(car)) do %>
      <tr>
        <td><%= car.name %></td>
        <td><%= car.long %></td>
        <td><%= car.lat %></td>
        <td><%= link_to 'Show', car, :class => 'btn btn-primary'%></td>
        <!-- <td><%#= link_to 'Edit', edit_car_path(car) %></td> -->
        <td><%= link_to 'Delete', car, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger' %></td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Back', user_path(current_user.id), :class => 'btn btn-primary' %>
<% end %>
